    /* Pseudo-classes */
    .btn{
      display:inline-block;
      padding:10px 16px;
      background:#3b82f6;
      color:#fff;
      border-radius:6px;
      text-decoration:none;
    }
    .btn:hover{background:#2563eb;}
    .btn:active{background:#1e40af;}
    .btn:focus{outline:2px solid #60a5fa;}

    /* Pseudo-elements */
    .special-heading::before{
      content:"★ ";
      color:#f59e0b;
    }
    .special-heading::after{
      content:" ★";
      color:#f59e0b;
    }
    p::first-letter{
      font-size:1.5em;
      font-weight:bold;
      color:#1d4ed8;
    }

    /* Advanced selectors */
    ul li:nth-child(odd){background:#f3f4f6;}
    ul li:nth-child(even){background:#e5e7eb;}

    .faq .question + .answer{display:none;}
    .faq .question.open + .answer{display:block;}

  </style>
